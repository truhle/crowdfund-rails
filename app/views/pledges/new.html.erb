<header id="content-header">
  <h1>Pledge for <%= link_to @project.name, @project %></h1>
</header>

<%= form_for([@project, @pledge]) do |f| %>
  <%= render "shared/errors", object: @pledge %>
  <fieldset>
    <ol>
      <li class="required">
        <%= f.label :name %>
        <%= f.text_field :name, size: 40, autofocus: true %>
      </li>
      <li class="required">
        <%= f.label :email %>
        <%= f.text_field :email, size: 40 %>
      </li>
      <li class="required">
        <%= f.label :amount %>
        <%= f.select :amount, Pledge::AMOUNTS, prompt: "Choose amount" %>
      </li>
      <li>
        <%= f.label :comment %>
        <%= f.text_area :comment, cols: 80, placeholder: "Let us know what you think about this project" %>
      </li>
    </ol>
    <p>
      <%= f.submit "Make Pledge" %>
      <%= link_to "Cancel", @project, class: "button" %>
    </p>
  </fieldset>
<% end %>
