<%= form_for(@project) do |f| %>
  <%= render 'shared/errors', object: @project %>
  <fieldset>
    <ol>
      <li class="required">
        <%= f.label :name %>
        <%= f.text_field :name, autofocus: true %>
      </li>
      <li class="required">
        <%= f.label :description %>
        <%= f.text_area :description, cols: 40, rows: 7 %>
      </li>
      <li class="required">
        <%= f.label :pledging_ends_on %>
        <%= f.date_select :pledging_ends_on %>
      </li>
      <li class="required">
        <%= f.label :target_pledge_amount %>
        <%= f.number_field :target_pledge_amount %>
      </li>
      <li class="required">
        <%= f.label :website %>
        <%= f.text_field :website, size: @project.website.respond_to?(:length) ? (@project.website.length + 10) : 50 %>
      </li>
      <li class="required">
        <%= f.label :team_members %>
        <%= f.text_field :team_members %>
      </li>
      <li class="required">
        <%= f.label :image_file_name, 'Image Filename' %>
        <%= f.text_field :image_file_name, size: 30,
                         placeholder: "GIF, JPG, or PNG file name" %>
      </li>
    </ol>
    <p>
      <%= f.submit %>
      <%= link_to "Cancel", projects_path, class: 'button' %>
    </p>
  </fieldset>
<% end %>
